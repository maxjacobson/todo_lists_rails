<p id="notice"><%= notice %></p>

<div class="list">

	<h2><%= @list.name %> <%= "✓" if @list.completed %></h2>

	<ol>
	<% @list.items.each do |item| %>
	  <li>
	    <%= item.name %>
	    <%= "✓" if item.completed %>
	  </li>

	<% end %>
	</ol>


	<%= link_to 'Edit', edit_list_path(@list) %> |
	<%= link_to 'Back', lists_path %> |
	<a href="/lists/<%= @list.id %>/items/new">New item to this list</a>

</div>

